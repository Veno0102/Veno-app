<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WrieJoinActivity"
    android:orientation="vertical">

    <EditText
        android:layout_above="@+id/image_image"
        android:gravity="top"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:background="@color/background_color"
        android:id="@+id/join_write_editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="이 클랜에 가입해야하는 이유를 적어주세요"/>
    <ImageView
        android:id="@+id/image_image"
        android:layout_above="@+id/bottom_button"
        android:src="@drawable/image_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/nav_division"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/image_image"
        android:background="@color/red"
        android:orientation="horizontal" />

    <!-- Bottom Navigation View -->
    <LinearLayout
        android:id="@+id/bottom_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="완료"
            android:gravity="center"
            android:id="@+id/ok_btn"
            android:textColor="@color/blue"
            android:src="@drawable/ok_img"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>